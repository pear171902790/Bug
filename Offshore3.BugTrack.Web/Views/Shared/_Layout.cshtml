@model Offshore3.BugTrack.ViewModels.LayoutViewModel
<!DOCTYPE html>
<html>
    <head>
        <title>@Model.Title</title>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
        <style>
            body {
                font-family: Verdana;
                font-size: 14px;
                margin: 0;
            }

            #container {
                margin: 0 auto;
                width: 100%;
            }

            #header {
                border: 1px solid gray;
                height: 100px;
                margin-bottom: 5px;
            }

            h1 {
                text-align: center;
                text-shadow: 2px 2px 5px #333333;
            }
            h5{ float: right;}
            .ErrorMessage {
                color: red;
            }
            
        </style>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"> </script>
        <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"> </script>
        <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
    </head>
    <body>
        <div id="container">
            <div id="header">
                <h1>Welcome to use BugTrack</h1>
            </div>
            <div id="mainContent">    
                @RenderBody()
            </div>        </div>
    </body>
</html>