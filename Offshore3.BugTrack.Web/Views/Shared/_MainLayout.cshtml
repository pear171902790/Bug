@model Offshore3.BugTrack.ViewModels.MainLayoutViewModel
<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>
    <style>
        form {
            margin: 0;
        }

        body {
            font-family: Verdana;
            font-size: 14px;
            margin: 0;
        }

        #container {
            margin: 0 auto;
            width: 100%;
        }

        #header {
            border: 1px solid gray;
            height: 100px;
            margin-bottom: 5px;
        }

        h1 {
            text-align: center;
            text-shadow: 2px 2px 5px #333333;
        }

        h5 {
            float: right;
        }

        .ErrorMessage {
            color: red;
        }
    </style>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <script src="~/Content/Scripts/jquery-1.9.1.js"> </script>
    @*<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />*@
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"> </script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"> </script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
    <script src="~/Content/Scripts/JSONHelper.js"> </script>
    <script src="~/Content/Scripts/ajaxupload.js"> </script>
    <script src="~/Content/kindeditor-4.1.7/kindeditor-min.js"> </script>
    <script src="~/Content/kindeditor-4.1.7/lang/zh_CN.js"> </script>

    @*<script src="~/Content/bootstrap/js/bootstrap-validation.min.js"> </script>
        <link href="~/Content/jquery-easyui-1.3.3/themes/icon.css" rel="stylesheet" />
        <link href="~/Content/jquery-easyui-1.3.3/themes/default/easyui.css" rel="stylesheet" />
        <script src="~/Content/jquery-easyui-1.3.3/jquery.min.js"></script>
        <script src="~/Content/jquery-easyui-1.3.3/jquery.easyui.min.js"></script>*@
</head>
<body>
    <div id="container">
        <div id="header">
            <h1>Welcome to use BugTrack</h1>

            <h5>[<a href="@Url.Action("Profiles", "Users")">@Model.CurrentUserName</a>]&nbsp;<a href="@Url.Action("SignOut", "Account")">Log Out</a></h5>

        </div>
        <div id="mainContent">
            @RenderBody()
        </div>
    </div>

</body>
</html>
