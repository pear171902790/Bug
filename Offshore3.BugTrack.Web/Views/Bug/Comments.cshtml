@model List<Offshore3.BugTrack.ViewModels.CommentViewModel>


@foreach (var c in Model)
{
    @c.Content 
    <br/>
    <span class="addInfo">
        @c.Commentator 
        <span>Added</span> 
        @Convert.ToString(c.AddTime)
    </span>
    <br/>
}


<style>
    .addInfo{ font-size: 10px;padding-left: 20px;}
</style>